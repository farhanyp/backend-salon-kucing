<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nomor</th>
                        <th>Nama Pemilik</th>
                        <th>Telepon</th>
                        <th>Email</th>
                        <th>Pelayanan</th>
                        <th>Nama hewan peliharaan</th>
                        <th>Jenis hewan peliharaan</th>
                        <th>Tanggal Mulai</th>
                        <th>Tanggal Berakhir</th>
                        <th>Berkebutuhan Khusus</th>
                        <th>Status Pembayaran</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let index=0; index < booking.length; index++ ) { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= booking[index]._doc.ownerName %>
                            </td>
                            <td>
                                <%= booking[index]._doc.phoneNumber %>
                            </td>
                            <td>
                                <%= booking[index]._doc.email %>
                            </td>
                            <td>
                                <%= booking[index]._doc.service %>
                            </td>
                            <td>
                                <%= booking[index]._doc.petName %>
                            </td>
                            <td>
                                <%= booking[index]._doc.petTypes %>
                            </td>
                            <td>
                                <%= booking[index].formattedStartTime %>
                            </td>
                            <td>
                                <%= booking[index].formattedEndTime %>
                            </td>
                            <td>
                                <%= booking[index]._doc.specialNeeds %>
                            </td>
                            <td>
                                <%= booking[index]._doc.paymentStatus %>
                            </td>
                            <td>
                                <form action="/admin/booking/<%= booking[index]._doc._id %>?_method=DELETE" method="post">
                                    <input type="hidden" class="form-control" name="bookingId" placeholder="Enter name" value= "<%= booking[index].id %>">
                                    <a href="javascript:void();" type="button"
                                        class="btn btn-warning btn-circle btn-sm button-update"
                                        data-id="<%= booking[index]._doc._id %>" 
                                        data-paymentstatus="<%= booking[index]._doc.paymentStatus %>"><i
                                            class="fas fa-edit"></i></a>
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm"><i
                                            class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>